{
  "root": {
    "src": "./src",
    "dest": "./dist"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "dist"
      }
    },

    "static": {
      "src": "static",
      "extensions": ["html", "ico"]
    },

    "css": {
      "src": "styles",
      "dest": "styles",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "includePaths": [
          "bower_components/bootstrap-sass/assets/stylesheets"
        ]
      },
      "extensions": ["scss", "css"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    }
  }
}
